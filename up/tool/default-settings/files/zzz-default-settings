uci -q commit fstab
uci -q commit turboacc
uci -q commit network
uci -q commit system
uci -q commit firewall
uci -q commit mwan3
[ x$debug = x1 ] && echo $ver
}

# sed -i '/coremark/d' /etc/crontabs/root
